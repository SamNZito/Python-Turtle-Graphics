import turtle
from random import randint

turtle.speed(0)

#setup
turtle.setup (width=800, height=800, startx=50/2, starty=50/2)


turtle.colormode(255)

for x in range (255):
    
    #r = randint(0, 255)
    #g = randint(0, 255)
    #b = randint(0, 255)
    turtle.pencolor(x,0,255-x)
    turtle.forward(x)
    turtle.left(59)
    turtle.width(.01*x)

#turtle.left(59)
turtle.forward(20)


turtle.hideturtle()

turtle.Screen().exitonclick()

