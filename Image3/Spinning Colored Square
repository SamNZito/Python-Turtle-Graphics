import turtle
from random import randint

turtle.speed(0)

#setup
turtle.setup (width=800, height=800, startx=50/2, starty=50/2)

r = randint(0, 255)
g = randint(0, 255)
b = randint(0, 255)

turtle.colormode(255)
for x in range (400):
    
    r = randint(0, 255)
    g = randint(0, 255)
    b = randint(0, 255)

    turtle.pencolor(r,g,b)
    turtle.forward(50+x)
    turtle.right(90.9)

turtle.hideturtle()

turtle.Screen().exitonclick()
